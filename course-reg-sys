  <center>
    <h3>"Grab the opportunity today! 🚀 Learn in-demand skills, boost your career, and secure your future with our expert courses."</h3>
    <div>
      <p>Select course:</p>
            <ul id="courseList"></ul>
            <select id="courseSelect">
            <option value="1">FullStack</option>
            <option value="2">UI/UX designer</option>
            <option value="3">AI Cloud Engineer</option>
            <option value="4">Data Analytics</option>
            <option value="5">Devops</option>
            <option value="6">Web Development</option>
            </select>
    </div>
    <br>
    <button onclick="msg()">Enroll</button>
    </center>
  <script>
    let courses = [
      {id: 1, name: "FullStack", seats: 4, prereq: ""},
      {id: 2, name: "UI/UX designer", seats: 1, prereq: ""},
      {id: 3, name: "AI Cloud Engineer", seats: 3, prereq: ""},
      {id: 4, name: "Data Analytics", seats: 2, prereq: ""},
      {id: 5, name: "Devops", seats: 6, prereq: ""},
      {id: 6, name: "Web Development", seats: 5, prereq: ""}
      ];
        
    function msg() {
      let courseId = parseInt(document.getElementById("courseSelect").value);
      let course = courses.find(c => c.id === courseId);
      if(course.seats > 0) {
        course.seats--;
        alert(`Registered for ${course.name} 👏🥳. Seats left: ${course.seats}`);
        } else {
        alert("Course full!");
        }
      }
  </script>
